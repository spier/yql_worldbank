<?xml version="1.0" encoding="UTF-8" ?>
<table xmlns="http://query.yahooapis.com/v1/schema/table.xsd">
	<meta>
		<author>Sebastian Spier</author>
		<description>
			WorldBank Data API, 
			Effort to combine all the data queries
		</description>
	   	<documentationURL>http://data.worldbank.org/developers/api-overview</documentationURL>
		<sampleQuery>select * from {table} where country='TUR' and indicator='BAR.PRM.SCHL.1519'</sampleQuery>		
	</meta>
	<bindings>
		<select itemPath="wb:data.wb:data" produces="XML">
			<urls>
        		<url env="all">http://api.worldbank.org/countries/indicators/{indicator}?date={from}:{to}</url>
      		</urls>
			<paging model="page">
				<start id="page" default="1" />
				<pagesize id="per_page" max="100" />
				<total default="10" />
			</paging>
	      	<inputs>
		        <key id="indicator" type="xs:string" paramType="path" required="true"/>
		
		        <key id="country" type="xs:string" paramType="path" default="all" />
				<key id="from" type="xs:string" paramType="path" default="1960" />
				<key id="to" type="xs:string" paramType="path" default="2010" />
	      	</inputs>
    	</select>
  	</bindings>
</table>