<?xml version="1.0" encoding="UTF-8" ?>
<table xmlns="http://query.yahooapis.com/v1/schema/table.xsd">
	<meta>
		<author>Sebastian Spier</author>
		<description>WorldBank Data API</description>
	   	<documentationURL>http://data.worldbank.org/developers/api-overview</documentationURL>
		<sampleQuery>select * from {table} where country='TUR' and indicator='BAR.PRM.SCHL.1519'</sampleQuery>		
	</meta>
	<bindings>
		<select itemPath="rsp.wb:data.wb:data" produces="XML">
      		<urls>
        		<url env="all">http://api.worldbank.org/countries/{country}/indicators/{indicator}</url>
      		</urls>
	      	<paging model="page">
	        	<start id="page" default="0" />
	        	<pagesize id="per_page" max="100" />
	        	<total default="10" />
	      	</paging>
	      	<inputs>
		        <key id="indicator" type="xs:string" paramType="path" />
		        <key id="date" type="xs:string" paramType="query" />
		        <key id="country" type="xs:string" paramType="path" />
	      	</inputs>
    	</select>
  	</bindings>
</table>
